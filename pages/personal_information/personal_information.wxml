<view class='img' style='width:100%;height:182rpx;text-align:center;margin-top:52rpx;'>
<image src='{{userInfo.avatarUrl}}' style='width:182rpx;height:182rpx;border-radius:50%;'></image>
</view>
<view class='name' style='width:100%;text-align:center;margin-top:20rpx;font-size:28rpx;color:#999999;'>{{info.realName}}</view>
<view class='info'>
