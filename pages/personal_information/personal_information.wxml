<view class='z_h'>
<view class='z_h_name'>性别</view>
<view class='z_h_info'>{{info.sex==0?"未知":(info.sex==1?"男":"女")}}</view>
</view>
<!--  -->
<view class='z_h'>
<view class='z_h_name'>手机号码</view>
<view class='z_h_info'>{{info.phone||''}}</view>
</view>
<!--  -->
<view class='z_h'>
<view class='z_h_name'>身份证</view>
